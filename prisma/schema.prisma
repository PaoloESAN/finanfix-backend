generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model categorias {
  id                Int             @id @default(autoincrement())
  usuario_id        Int?
  nombre            String          @db.VarChar(50)
  es_predeterminada Boolean?        @default(false)
  usuarios          usuarios?       @relation(fields: [usuario_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  transacciones     transacciones[]

  @@index([usuario_id], map: "idx_categorias_usuario")
}

model transacciones {
  id           Int        @id @default(autoincrement())
  usuario_id   Int
  categoria_id Int
  monto        Decimal    @db.Decimal(12, 2)
  descripcion  String?    @db.VarChar(255)
  fecha        DateTime   @default(dbgenerated("CURRENT_DATE")) @db.Date
  created_at   DateTime?  @default(now()) @db.Timestamp(6)
  updated_at   DateTime?  @default(now()) @db.Timestamp(6)
  categorias   categorias @relation(fields: [categoria_id], references: [id], onUpdate: NoAction)
  usuarios     usuarios   @relation(fields: [usuario_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([categoria_id], map: "idx_transacciones_categoria")
  @@index([fecha], map: "idx_transacciones_fecha")
  @@index([usuario_id], map: "idx_transacciones_usuario")
}

model usuarios {
  id            Int             @id @default(autoincrement())
  email         String          @unique @db.VarChar(255)
  password_hash String          @db.VarChar(255)
  nombre        String          @db.VarChar(100)
  avatar_url    String?         @db.VarChar(500)
  created_at    DateTime?       @default(now()) @db.Timestamp(6)
  updated_at    DateTime?       @default(now()) @db.Timestamp(6)
  categorias    categorias[]
  transacciones transacciones[]
}
